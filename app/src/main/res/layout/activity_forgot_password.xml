<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_a"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/forgot_password_quote"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_forgot_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Email*"
        android:maxLines="1"
        android:paddingStart="@dimen/signup_edittext_padding"
        android:singleLine="true"
        android:textColorHint="@color/colorWhite"
        android:textSize="15sp"
        app:met_baseColor="@android:color/white"
        app:met_errorColor="@color/colorRed"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="@color/colorWhite"
        app:met_textColorHint="@color/colorWhite"
        app:met_underlineColor="@color/colorRed" />

    <Button
        android:id="@+id/btn_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_login_btn"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="Send"
        android:textColor="@color/colorWhite"
        android:textSize="13sp" />

</LinearLayout>