<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/img_frame"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_restaurant"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:contentDescription="@string/image"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/img_default_combo" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_nonveg"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="5dp"
                android:contentDescription="@string/image"
                android:src="@drawable/nonveg"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img_veg"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:contentDescription="@string/image"
                android:src="@drawable/veg" />

            <TextView
                android:id="@+id/restaurant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:gravity="left|center"
                android:paddingLeft="3dp"
                android:text="Restaurant Name"
                android:textColor="@color/colorTextName"
                android:textSize="13dp" />


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>